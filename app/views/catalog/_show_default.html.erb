<% doc_presenter = show_presenter(document) %>

<div id="row">
  <div id="metadata" class="col-sm-12 col-md-6">
    <% document_show_fields(document).each do |field_name, field| -%>
        <% if should_render_show_field? document, field %>
            <%= doc_presenter.field_value field_name %>
        <% end -%>
    <% end -%>
  </div>

  <div class="socialButtons">
    <a href="javascript:window.open('https://www.facebook.com/sharer/sharer.php?s=100&amp;u=<%= solr_document_url(document.id) %>', '_blank', 'width=626,height=436');void(0);">
      <i class="fa fa-facebook fa-lg" aria-hidden="true"></i>
    </a>
    <a href="https://twitter.com/intent/tweet?via=kb.dk&amp;url=<%= solr_document_url(document.id) %>" target="_blank">
      <i class="fa fa-twitter fa-lg" aria-hidden="true"></i>
    </a>
    <i class="fa fa-print fa-lg" aria-hidden="true"></i>
  </div>

  <div id="kbOSDInstance" class="col-sm-2 col-md-6">
    <div class="kbOSDViewer">
      <div class="kbOSDToolbar"></div>
      <div class="kbOSDContent"></div>
    </div>
  </div>
</div>


<script type="text/javascript">
    var jsonurl = <%= @document['content_metadata_image_iiif_info_ssm'].to_s.html_safe %>;

    var kbOSDconfig = [{
        "id": "kbOSDInstance",
        "showDownloadControl": true,
        "toolbar": "kbOSDToolbar",
        "showNavigator": true,
        "initialPage": 1,
        "defaultZoomLevel": 0,
        "sequenceMode": true,
        "tileSources": jsonurl
    }];
</script>
<script src="http://static-test-01.kb.dk/kbOpenSeadragon/2.3.0/js/KbOSD_bundle_min.js"></script>
