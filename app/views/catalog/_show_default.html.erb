<% doc_presenter = show_presenter(document) %>

<div id="row">
<div id="kbOSDInstance" class="col-md-7">
  <div class="kbOSDViewer">
    <div class="kbOSDToolbar"></div>
    <div class="kbOSDContent"></div>
  </div>
</div>
<div id="metadata" class="col-md-5">
  <dl class="dl-horizontal  dl-invert">
    <% document_show_fields(document).each do |field_name, field| -%>
        <% if should_render_show_field? document, field %>
            <dt><%= render_document_show_field_label document, field: field_name %></dt>
            <dd ><%= doc_presenter.field_value field_name %></dd>
        <% end -%>
    <% end -%>
  </dl>
</div>
</div>

<script type="text/javascript">
    var url = <%= @document['content_metadata_image_iiif_info_ssm'].to_s.html_safe %>;

    var kbOSDconfig = [{
        "id": "kbOSDInstance",
        "toolbar": "kbOSDToolbar",
        "showNavigator": true,
        "initialPage": 1,
        "defaultZoomLevel": 0,
        "sequenceMode": true,
        "tileSources": url
    }];

</script>
<script src="http://static.kb.dk/kbOpenSeadragon/2.2.0/js/KbOSD_bundle_min.js"></script>